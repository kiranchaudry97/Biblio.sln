<Window x:Class="Biblio.Dekstop.Views.MembersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ledenbeheer - Biblio" Height="640" Width="980"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filterbalk met terug-knop en teller -->
        <Border Background="{DynamicResource AccentLightBrush}" CornerRadius="6" Padding="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <DockPanel LastChildFill="False">
                <Button DockPanel.Dock="Left" Content="Terug" IsCancel="True" Margin="0,0,8,0"/>
                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#555"
                           Text="{Binding Items.Count, StringFormat={}{0} leden}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="260" Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                    <Button Content="Zoek" Command="{Binding SearchCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                    <Button Content="Nieuw" Command="{Binding NewCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Grid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Voornaam" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Achternaam" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Telefoon" Binding="{Binding Phone}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulier -->
        <Border Grid.Row="2" Padding="12" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="Voornaam"/>
                    <TextBox Text="{Binding Edit.FirstName}" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,8,0">
                    <TextBlock Text="Achternaam"/>
                    <TextBox Text="{Binding Edit.LastName}" />
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="0,0,8,0">
                    <TextBlock Text="E-mail"/>
                    <TextBox Text="{Binding Edit.Email}" />
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="0,0,8,0">
                    <TextBlock Text="Telefoon"/>
                    <TextBox Text="{Binding Edit.Phone}" />
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="Opslaan" Command="{Binding SaveCommand}" Margin="8,0,0,0" Style="{StaticResource PrimaryButton}"/>
                    <Button Content="Verwijderen" Command="{Binding DeleteCommand}" Margin="8,0,0,0" Background="{DynamicResource DangerBrush}" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
