<!--
Doel: UI voor het bewerken van profielgegevens (naam, e-mail, telefoon) van de ingelogde gebruiker.

-->
<Window x:Class="Biblio.Dekstop.Views.ProfileWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Profiel bewerken" Height="300" Width="460"
 WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
 <Border Margin="16" Padding="16" CornerRadius="8" BorderBrush="#CCE6F7" BorderThickness="1" Background="{StaticResource AccentLightBrush}">
 <Grid>
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock Text="Profiel" FontSize="18" FontWeight="Bold"/>

 <StackPanel Grid.Row="1" Margin="0,12,0,12">
 <TextBlock Text="Volledige naam"/>
 <TextBox x:Name="FullNameBox" Margin="0,0,0,8"/>

 <TextBlock Text="E-mail"/>
 <TextBox x:Name="EmailBox" Margin="0,0,0,8"/>

 <TextBlock Text="Telefoon"/>
 <TextBox x:Name="PhoneBox"/>
 </StackPanel>

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <Button Content="Annuleren" IsCancel="True" Margin="0,0,8,0"/>
 <Button Content="Opslaan" IsDefault="True" Click="OnSave" Style="{StaticResource PrimaryButton}"/>
 </StackPanel>
 </Grid>
 </Border>
</Window>
