<!--
Doel: Inlogvenster voor gebruikers met e-mail/wachtwoord, toggle voor wachtwoord tonen en link voor reset.
Beschrijving: Verzamelt e-mail en wachtwoord, ondersteunt zichtbaar/verborgen wachtwoord en biedt een resetkoppeling.
-->
<Window x:Class="Biblio.Dekstop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aanmelden - Biblio" Height="360" Width="440"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Margin="16" Padding="16" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource AccentLightBrush}">
        <Grid Background="{DynamicResource BackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Meld je aan" FontSize="20" FontWeight="Bold" Margin="0,0,0,12" Foreground="{DynamicResource ForegroundBrush}"/>

            <StackPanel Grid.Row="1" Margin="0,8,0,8">
                <TextBlock Text="E-mail" Foreground="{DynamicResource ForegroundBrush}"/>
                <TextBox x:Name="EmailBox" Margin="0,0,0,8"/>

                <TextBlock Text="Wachtwoord" Foreground="{DynamicResource ForegroundBrush}"/>
                <!-- Verborgen invoer -->
                <PasswordBox x:Name="PasswordBox"/>
                <!-- Zichtbare invoer -->
                <TextBox x:Name="PasswordTextBox" Visibility="Collapsed"/>

                <CheckBox x:Name="ShowPasswordCheck" Content="Toon wachtwoord" Margin="0,6,0,8"
                          Checked="OnToggleShowPassword" Unchecked="OnToggleShowPassword"/>

                <TextBlock Text="Wachtwoord vergeten?" Foreground="DodgerBlue" Cursor="Hand"
                           MouseLeftButtonUp="OnForgotPassword"/>
            </StackPanel>

            <TextBlock x:Name="ErrorText" Grid.Row="2" Foreground="IndianRed" TextWrapping="Wrap"
                       Visibility="Collapsed" />

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="Annuleren" Margin="0,0,8,0" IsCancel="True"/>
                <Button Content="Aanmelden" IsDefault="True" Click="OnLogin" Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
