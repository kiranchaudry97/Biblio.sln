<Window x:Class="Biblio.Dekstop.Views.RegisterWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Registreren - Biblio" Height="320" Width="440"
 WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
 <Grid Margin="16">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock Text="Maak een account" FontSize="18" FontWeight="Bold"/>

 <StackPanel Grid.Row="1" Margin="0,12,0,12">
 <TextBlock Text="Volledige naam"/>
 <TextBox x:Name="FullNameBox" Margin="0,0,0,8"/>

 <TextBlock Text="E-mail"/>
 <TextBox x:Name="EmailBox" Margin="0,0,0,8"/>

 <TextBlock Text="Wachtwoord"/>
 <PasswordBox x:Name="PasswordBox"/>

 <CheckBox x:Name="StaffCheck" Content="Medewerker (standaard)" IsChecked="True" Margin="0,8,0,0"/>
 </StackPanel>

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <Button Content="Annuleren" IsCancel="True" Margin="0,0,8,0"/>
 <Button Content="Registreren" IsDefault="True" Click="OnRegister"/>
 </StackPanel>
 </Grid>
</Window>
