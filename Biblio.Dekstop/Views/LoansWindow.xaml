<Window x:Class="Biblio.Dekstop.Views.LoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uitleningen - Biblio" Height="680" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nieuw uitleenrecord / filterbalk -->
        <Border Grid.Row="0"
                Background="{DynamicResource AccentLightBrush}"
                CornerRadius="6" Padding="8"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <DockPanel LastChildFill="False">
                <Button DockPanel.Dock="Left" Content="Terug" IsCancel="True" Margin="0,0,8,0"/>
                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" Margin="8,0,0,0"
                           Foreground="{DynamicResource ForegroundBrush}"
                           Text="{Binding Items.Count, StringFormat={}{0} uitleningen}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Lid:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox Width="220" ItemsSource="{Binding Members}" SelectedItem="{Binding SelectedMember}"
                              DisplayMemberPath="LastName" Margin="0,0,12,0"/>
                    <TextBlock Text="Boek:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox Width="320" ItemsSource="{Binding AvailableBooks}" SelectedItem="{Binding SelectedBook}"
                              DisplayMemberPath="Title"/>
                    <CheckBox Content="Alleen open" IsChecked="{Binding IsOnlyOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    <Button Content="Uitlenen" Command="{Binding LendCommand}" Margin="12,0,0,0" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Overzicht -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lid" Binding="{Binding Member.LastName}" Width="2*"/>
                <DataGridTextColumn Header="Boek" Binding="{Binding Book.Title}" Width="3*"/>
                <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Eind" Binding="{Binding DueDate, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="Ingeleverd" Binding="{Binding ReturnedAt, StringFormat=d}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Acties op geselecteerde uitleen -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Markeer als teruggebracht" Command="{Binding ReturnCommand}" Margin="0,0,8,0"/>
            <Button Content="Verwijderen" Command="{Binding DeleteCommand}" Background="{DynamicResource DangerBrush}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
