Doel: UI voor boekenbeheer met filterbalk, DataGrid voor lijst en formulier voor aanmaken/bewerken/verwijderen.
Beschrijving: Biedt zoeken en filteren (titel/auteur/ISBN), weergave van boeken en bewerkingsformulier met categorie-selectie.

-->
<Window x:Class="Biblio.Dekstop.Views.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Biblio.Dekstop.Controls"
        Title="Boekenbeheer - Biblio"
        Height="720" Width="1080"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid Margin="16" Background="{DynamicResource BackgroundBrush}">
        <!-- FIX: define three rows: filter (Auto), datagrid (*), form (Auto) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- filter bar -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Form -->
        </Grid.RowDefinitions>

        <!-- Filterbalk -->
        <Border Grid.Row="0" Background="{DynamicResource AccentLightBrush}" CornerRadius="6" Padding="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
            <DockPanel LastChildFill="False">
                <Button DockPanel.Dock="Left" Content="Terug" IsCancel="True" Margin="0,0,8,0"/>
                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center" Margin="8,0,0,0"
                           Foreground="#555" Text="{Binding Items.Count, StringFormat={}{0} boeken}"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="260" ToolTip="Zoek op titel, auteur of ISBN" 
                             Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
                    <ComboBox Width="240" ItemsSource="{Binding Authors}" SelectedItem="{Binding SelectedAuthorFilter}" Margin="0,0,8,0"/>
                    <Button Content="Zoek" Command="{Binding SearchCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                    <Button Content="Nieuw" Command="{Binding NewCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,8,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Auteur" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="*"/>
                <DataGridTextColumn Header="Categorie" Binding="{Binding Category.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulier -->
        <Border Grid.Row="2" Padding="12" CornerRadius="8" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <local:LabeledTextBox Label="Titel" Text="{Binding Edit.Title, UpdateSourceTrigger=PropertyChanged}"/>
                <local:LabeledTextBox Grid.Row="1" Label="Auteur" Text="{Binding Edit.Author, UpdateSourceTrigger=PropertyChanged}"/>
                <local:LabeledTextBox Grid.Row="2" Label="ISBN" Text="{Binding Edit.Isbn, UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="Categorie" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox Width="220"
                              ItemsSource="{Binding Categories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"/>
                    <Button Content="Opslaan" Command="{Binding SaveCommand}" Margin="8,0,0,0" Style="{StaticResource PrimaryButton}"/>
                    <Button x:Name="DeleteButton" Content="Verwijderen" Command="{Binding DeleteCommand}" Margin="8,0,0,0"
                            Background="{DynamicResource DangerBrush}" Foreground="White" Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
