<!--
Doel: Dialoog om wachtwoord te resetten voor een geselecteerde gebruiker.
Beschrijving: Toont invoervelden voor nieuw wachtwoord en bevestiging en roept Opslaan aan om via Identity te resetten.
-->
<Window x:Class="Biblio.Dekstop.Views.ResetPasswordWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Wachtwoord opnieuw instellen" Height="240" Width="440"
 WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
 <Border Margin="16" Padding="16" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Background="{DynamicResource AccentLightBrush}">
 <Grid Background="{DynamicResource BackgroundBrush}">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock Text="Stel een nieuw wachtwoord in" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource ForegroundBrush}"/>

 <StackPanel Grid.Row="1" Margin="0,12,0,12">
 <TextBlock Text="Nieuw wachtwoord" Foreground="{DynamicResource ForegroundBrush}"/>
 <PasswordBox x:Name="NewBox" Margin="0,0,0,8"/>
 <TextBlock Text="Bevestig nieuw wachtwoord" Foreground="{DynamicResource ForegroundBrush}"/>
 <PasswordBox x:Name="ConfirmBox"/>
 </StackPanel>

 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
 <Button Content="Annuleren" IsCancel="True" Margin="0,0,8,0"/>
 <Button Content="Opslaan" IsDefault="True" Click="OnSave" Style="{StaticResource PrimaryButton}"/>
 </StackPanel>
 </Grid>
 </Border>
</Window>